<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnMaui.AbsoluteLayoutDemo"
             Title="AbsoluteLayoutDemo">
    <AbsoluteLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            AbsoluteLayout.LayoutBounds="0,50,400,400"
            AbsoluteLayout.LayoutFlags="XProportional"/>

        <Button Text="My Btn" AbsoluteLayout.LayoutBounds="100, 70, 150, 50" AbsoluteLayout.LayoutFlags="HeightProportional" />

    </AbsoluteLayout>
</ContentPage>