<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnMaui.PresentationControl"
             Title="PresentationControl">
    <StackLayout>
        <BoxView 
            BackgroundColor="Gainsboro"
            HeightRequest="300" />
        
        <Label 
            Text="Simple Title" 
            TextColor="Aqua"
            FontAttributes="Bold"
            FontSize="Title"
            Margin="10"
            HorizontalOptions="Center"/>

        <Ellipse 
            Fill="red" 
            Stroke="green"
            StrokeThickness="12"
            HeightRequest="200"
            WidthRequest="200"
            HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>