<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnMaui.InotifyChangedDemo"
             Title="InotifyChangedDemo">
    <VerticalStackLayout>
        <Label 
            Text="INotify Change Property"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="Idtxt"
            BackgroundColor="Azure"
            Margin="5"
            Text="{Binding Id}"/>

        <Entry 
            x:Name="Nametxt"
            BackgroundColor="Azure"
            Margin="5"
            Text="{Binding Name}"/>

        <Button 
            Text="Change"
            Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>