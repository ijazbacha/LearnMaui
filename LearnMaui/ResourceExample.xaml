<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LearnMaui.ResourceExample"
             Title="ResourceExample">
    <ScrollView>
        <StackLayout>
            <Label 
            Text="Images"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Image Source="developer" IsAnimationPlaying="True" />
            <Image Source="haircare" />
            <Image Source="capture" />
            <Image Source="dotnet_bot.svg" />

            <Label 
                Text="Working with fonts."
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontFamily="OpenSans-Semibold.ttf"
                FontAttributes="Italic,Bold"
                FontSize="30"/>

            <Image>
                <Image.Source>
                    <FontImageSource Color="Aqua" FontFamily="Icon" Glyph="&#xE800;"/>
                </Image.Source>
            </Image>
        </StackLayout>
    </ScrollView>

</ContentPage>